<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="invit_plivo.class">Invit\PlivoBundle\Service\Plivo</parameter>
    </parameters>

    <services>
        <service id="invit_plivo" class="%invit_plivo.class%">
            <argument>%invit_plivo.auth.auth_id%</argument>
            <argument>%invit_plivo.auth.auth_token%</argument>
        </service>
    </services>

</container>
